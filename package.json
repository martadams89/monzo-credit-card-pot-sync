{
  "name": "monzo-credit-card-pot-sync",
  "version": "1.0.0",
  "description": "Sync your Monzo pots with credit card balances",
  "private": true,
  "scripts": {
    "start": "flask --app app run --port=1337",
    "dev": "npm run build-css-live & flask --app app run --port=1337 --debug",
    "build-css": "tailwindcss -i ./app/static/css/src/input.css -o ./app/static/css/dist/output.css",
    "build-css-live": "tailwindcss -i ./app/static/css/src/input.css -o ./app/static/css/dist/output.css --watch",
    "build:css": "tailwindcss -i ./app/static/css/src/input.css -o ./app/static/css/dist/output.css --minify",
    "watch:css": "tailwindcss -i ./app/static/css/src/input.css -o ./app/static/css/dist/output.css --watch"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.3.3"
  },
  "dependencies": {
    "flowbite": "^2.5.2"
  }
}
