# Flask settings
FLASK_APP=app.wsgi:app
FLASK_ENV=production
SECRET_KEY=your-secure-secret-key-here

# Database
# For SQLite (default)
# DATABASE_URL=sqlite:///app.db
# For PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Base URL for callbacks and emails
BASE_URL=http://localhost:8000

# Monzo API credentials
MONZO_CLIENT_ID=your-monzo-client-id-here
MONZO_CLIENT_SECRET=your-monzo-client-secret-here
MONZO_REDIRECT_URI=http://localhost:8000/auth/callback/monzo

# TrueLayer API credentials
TRUELAYER_CLIENT_ID=your-truelayer-client-id-here
TRUELAYER_CLIENT_SECRET=your-truelayer-client-secret-here
TRUELAYER_REDIRECT_URI=http://localhost:8000/auth/callback/truelayer

# Email settings
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=user@example.com
MAIL_PASSWORD=your-email-password-here
MAIL_DEFAULT_SENDER=noreply@example.com

# Admin email for notifications
ADMIN_EMAIL=admin@example.com

# Logging
LOG_LEVEL=INFO
